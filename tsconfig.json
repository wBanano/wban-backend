{
	"compilerOptions": {
		"strict": true,
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"lib": ["es2018"],
	"include": ["./src/**.ts"],
	"exclude": ["node_modules", "typings", "**/*.spec.ts"]
}
